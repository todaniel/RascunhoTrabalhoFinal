@model FinalWork.Models.Mensagens

<br />
@{
    ViewBag.Title = "Eliminação";
}

<h2>Eliminação de Mensagem</h2>
<br />

<h3>Tem a certeza que deseja eliminar a mensagem?</h3>
<br />

<div>
    <h4>Mensagens</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DonoDaMensagem.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DonoDaMensagem.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Tipo.Descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tipo.Descricao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Texto)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Texto)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Data)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Data)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Respondida)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Respondida)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataResposta)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataResposta)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TextoResposta)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TextoResposta)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <br />
            <input type="submit" value="Eliminar" class="btn btn-default btn-danger" /> |
            @Html.ActionLink("Voltar à Listagem", "Index")
        </div>
    }
</div>
